@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Cube - Bootstrap Admin Template</title>
    @if (ViewBag.IsDevelopment)
    {
        foreach (string file in ViewBag.JavascriptFiles)
        {
            @Html.Javascript(file)
        }
        foreach (string file in ViewBag.ScreenCssFiles)
        {
            @Html.Stylesheet(file, "screen")
        }
        foreach (string file in ViewBag.PrintCssFiles)
        {
            @Html.Stylesheet(file, "print")
        }
    }
    <!-- bootstrap -->

    <body id="login-page">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div id="login-box">
                        <div id="login-box-holder" style="margin-top:100px;">
                            <div class="row">
                                <div class="col-xs-12">
                                    <header id="login-header">
                                        <div id="login-logo">
                                            <img src="../../static/img/logo2.png" alt="" style="height:20px;" />
                                        </div>
                                    </header>
                                    <div id="login-box-inner">
                                        @using (Html.BeginForm("index","Login", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "login-form" }))
                                        {
                                            @Html.ValidationSummary();
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>

                                                    @Html.TextBox("username", (string)ViewBag.Username, new { @class = "form-control", required = "required", id = "", tabindex = 1, autofocus = "true" })


                                                </div>
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-key"></i></span>

                                                    @Html.Password("password", null, new { @class = "form-control", required = "required", tabindex = 2 })
                                                </div>
                                                <div id="remember-me-wrapper">
                                                    <div class="row">
                                                        <div class="col-xs-6">
                                                            <div class="checkbox-nice">
                                                                @Html.CheckBox("rememberMe")
                                                                <label for="remember-me">
                                                                    Remember me
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <a href="forgot-password.html" id="login-forget-link" class="col-xs-6">
                                                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <button type="submit" class="btn btn-primary btn-facebook col-xs-12">Login</button>
                                                    </div>
                                                </div>



                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                      
                    </div>
                </div>
            </div>
        </div>

       
    </body>
</html>

                        <img alt="" src="~/static/img/logos/none.png" style="border-radius:0px">
                        <div class="user-box">
                            <span class="name" style="font-size:2em;">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    New
                                   
                                </a>
                                

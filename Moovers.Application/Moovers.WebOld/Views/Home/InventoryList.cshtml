@model IEnumerable<Business.Models.InventoryItem>
@{
    Layout = "~/Views/Shared/Base.cshtml";
    ViewBag.Title = "Inventory List";
    ViewBag.BodyClass = "no-pad";
}

<style>
    table {
        float: left;
        width: 30%!important;
        margin-right: 2%;
    }
</style>

<div class="container-pad">
    @{ var count = 3;
       var itemCount = (int)Math.Floor(Model.Count() / (decimal)count);
    }

    @foreach (var c in Enumerable.Range(1, 3))
    {
        var items = Model.Skip((c - 1) * itemCount).Take(itemCount);
        <table class="table table-condensed" style="border: 1px solid #ddd;">
            <tr>
                <th>Code</th>
                <th>Item</th>
            </tr>
            @foreach (var item in items)
            {
                <tr>
                    <td style="width: 10px;">
                        @if (item.KeyCode > 0)
                        {
                            @item.KeyCode
                        }
                    </td>
                    <td>
                        @item.Name
                    </td>
                </tr>
            }
        </table>
    }
</div>

<br class="clear" />

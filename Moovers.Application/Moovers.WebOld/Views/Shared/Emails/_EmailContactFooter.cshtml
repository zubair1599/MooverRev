@model Business.ViewModels.EmailModel

<table width="100%" cellpadding="0" cellspacing="0" style="font-family: Arial, Helvetica, sans-serif; font-size: 14px; border: solid 6px #f5f5f5;">
    <tbody>
        <tr>
            <td colspan="2" height="15"></td>
        </tr>
        <tr>
            <td valign="top" width="50%" style="border-right: solid 1px #e5e5e5; padding-right: 12px; padding-left: 11px;">
                <h4 style="margin-top: 0; margin-bottom: 2px;">Your Account Manager</h4>
                <p style="font-size: 11px; color: #808080; line-height: 1.2em; margin-top: 0;">Call your Account Manager today for any moving and storage needs.</p>
                <ul style="list-style-type: none; line-height: 1.4em; margin: 0; padding: 0; font-size: 12px; color: #333333; float: left;">
                    <li style="margin-bottom: 3px; margin-left: 0; padding-left: 0;"><strong>
                        @Model.AccountManager.DisplayName()
                    </strong></li>
                    <li style="margin-bottom: 3px; margin-left: 0; padding-left: 0;">@Model.AccountManager.Title</li>
                    <li style="margin-bottom: 3px; margin-left: 0; padding-left: 0;">@Model.AccountManager.DisplayNumber()</li>
                    <li style="margin-bottom: 3px; margin-left: 0; padding-left: 0;">
                        <a href="mailto:@Model.AccountManager.aspnet_Users.aspnet_Membership.Email">
                            @Model.AccountManager.aspnet_Users.aspnet_Membership.Email
                        </a>
                    </li>
                </ul>
                @if (!String.IsNullOrWhiteSpace(Model.AccountManager.PictureUrl))
                {
                    <img src="http://confirm.1800moovers.com/static/img/profile/@Model.AccountManager.PictureUrl" alt="@Model.AccountManager.DisplayName()" width="75" style="float: right; border: 1px solid #ccc;" />
                }
                
            </td>
            <td valign="top" id="sec" width="50%" style="padding-left: 12px; padding-right: 25px;">
                <h4 style="margin-top: 0; margin-bottom: 2px;">Contact us</h4>
                <p style="font-size: 11px; color: #808080; line-height: 1.2em; margin-top: 0;">We're here to help. Call us anytime between 8am and 5pm (CST) Monday-Friday.</p>
                <ul style="list-style-type: none; line-height: 1.4em; margin: 0; padding: 0; font-size: 12px; color: #333333;">
                    <li style="margin-bottom: 3px; margin-left: 0; padding-left: 0;"><strong>@Model.Franchise.Name</strong></li>
                    <li style="margin-bottom: 3px; margin-left: 0; padding-left: 0;">1-800-MOOVERS</li>
                    <li style="margin-bottom: 3px; margin-left: 0; padding-left: 0;">@Model.Franchise.DisplayNumber()</li>
                    <li style="margin-bottom: 3px; margin-left: 0; padding-left: 0;">
                        <a href="mailto:info@1800moovers.com">info@1800moovers.com</a>
                    </li>
                </ul>
            </td>
        </tr>
        <tr>
            <td colspan="2" height="15"></td>
        </tr>
    </tbody>
</table>
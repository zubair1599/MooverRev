<div class="nav-dd-container">
    <div class="nav-dd-selected">
        <span class="nav-dd-icon icon-@ViewBag.SelectedMenu.ToLower()"></span>
        <span class="nav-dd-text">@ViewBag.SelectedMenu</span>
        <span class="dd-icon"></span>
    </div>
    <div class="nav-dd-list">
        @if (ViewBag.SelectedMenu != "Dashboard")
        {
            <div class="nav-dd-link">
                <a href="@Request.RawUrl">
                    <span class="nav-dd-icon icon-@ViewBag.SelectedMenu.ToLower()"></span>
                    <span class="nav-dd-text">@ViewBag.SelectedMenu</span>
                </a>
            </div>
            <div class="list-divider"></div>
        }
        <div class="nav-dd-link">
            <a href="@Url.Action("Index", "Home")">
                <span class="nav-dd-icon icon-dashboard"></span>

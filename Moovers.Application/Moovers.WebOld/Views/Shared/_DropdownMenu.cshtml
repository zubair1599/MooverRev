            <a href="@Url.Action("Index", "Accounts")">
                <span class="nav-dd-icon icon-accounts"></span>
                <span class="nav-dd-text">Accounts</span>
            </a>
        </div>
        <div class="nav-dd-link">
            <a href="@Url.Action("Index", "Quote")">
                <span class="nav-dd-icon icon-quotes"></span>
                <span class="nav-dd-text">Quotes</span>
            </a>
        </div>

@model Business.Models.aspnet_Roles

@{
    ViewBag.Title = "New User Profile";
}

<style>
    span.required {
        position: relative;
        overflow: visible;
    }

    span.required:after {
        content: "*" !important;
        color: red;
        display: block;
        font-size: 18px;
        position: absolute;
        right: 29px;
        z-index: 99999;
        top: 10px;
    }

    .form-inline-condensed input, .form-inline-condensed select { margin-right: 10px; }

    .form-inline-condensed span.required:after {
        right: 0;
        top: 8px;
    }
</style>

<div class="center-container">
    <div class="container-pad">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="section section-dark">
                <div class="section-wrap cfix">
                    <div class="section-title">
                        <h5>User Profile</h5>
                    </div>
                    <div class="section-content">
                        <div class="label-inline">
                            <label>Profile Name</label>
                        </div>
                        <div class="form-inline">
                            <span class="required inline">@Html.TextBoxFor(m => m.RoleName, new { required = "required", placeholder = "Name" })</span>
                        </div>
                        
                        <div class="label-inline">
                            <label>Profile Description</label>
                        </div>
                        <div class="form-inline">
                            <span class="inline">@Html.TextAreaFor(m => m.Description, new { placeholder = "Description" })</span>
                        </div>

                    </div>
                </div>
            </div>

            <br />
            <input type="submit" class="btn btn-primary" />
            <br />
        }
    </div>
</div>

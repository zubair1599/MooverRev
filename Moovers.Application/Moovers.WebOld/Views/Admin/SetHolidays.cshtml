@model IEnumerable<Business.Models.ScheduleNote>
@{
    ViewBag.Title = "Set Holidays";
}

<div class="container">
    <br />
<h4>Set Holidays</h4>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-inline" }))
    {
        <input type="date" placeholder="Date" name="day" />
        <input type="text" name="message" placeholder="Message" />
        <button type="submit" class="btn">Add</button>
    }
    <table>
        <tr>
            <th>Day</th>
            <th>Message</th>
            <th></th>
        </tr>
        @foreach (var item in Model.OrderBy(i => i.ToDate()))
        {
            <tr>
                <td>@item.ToDate().ToShortDateString()
                </td>
                <td>
                    @item.Message
                </td>
                <td>
                    @Html.ActionLink("X", "RemoveHoliday", new { id = item.NoteID })
                </td>
                
            </tr>
        }
    </table>

</div>